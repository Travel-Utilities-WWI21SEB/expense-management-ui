{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:weekly"
  ],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchFiles": ["^pnpm-lock.yaml$"],
      "lockFileMaintenance": {
        "enabled": true
      },
      "postUpdateOptions": ["pnpmDedupe"]
    }
  ],
  "reviewers": ["team:renovate-reviewer"]
}
